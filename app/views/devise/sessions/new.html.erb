<div class="container login m-3">
  <div class="row justify-content-center">
    <div class="col-lg-4">
      <%= image_tag 'plato.svg', class: 'logo mb-4' %>


      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= console %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%- if devise_mapping.omniauthable? %>

        <hr />
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "SSO: Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn btn-primary' %>
        <% end %>
      <% end %>

      <hr />
      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>


