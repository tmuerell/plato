<% for tag in current_project.board_tags %>
  <% tickets = Ticket.accessible_by(current_ability).with_tag(tag).where(status: [:new, :in_progress, :blocked]) %>
  <% if tickets.count > 0 %>
    <h4 class="mt-3"><%= link_to emojified(tag), board_path(tag) %></h4>
    <% tickets.each do |ticket| %>
      <%= render 'item', ticket: ticket %>
    <% end %>
  <% end %>
<% end %>

