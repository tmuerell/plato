<h3>Notification Configs</h3>

<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>Id</th>
    <th>Projekt</th>
    <th>Type</th>
    <th>Filter</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @notification_configs.each do |notification_config| %>
    <tr>
      <td><%= notification_config.id %></td>
    <td><%= notification_config.project.name %></td>
    <td><%= notification_config.delivery_type %></td>
    <td><%= notification_config.filter || "---" %></td>
      <td><%= link_to 'Show', notification_config %></td>
      <td><%= link_to 'Edit', edit_notification_config_path(notification_config) %></td>
      <td><%= link_to 'Destroy', notification_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification Config', new_notification_config_path %>