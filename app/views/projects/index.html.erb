<h3>Projects</h3>

<div class="container">
  <div class="row">
    <% if @projects.count == 0 %>
      <div class="col-6">
        <%= t '.no_projects' %>
      </div>
    <% end %>
    <% @projects.each do |project| %>
      <div class="col-sm-6 p-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= project.shortname %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= project.name %></h6>

            <%= link_to "Select", select_project_path(project), 'data-turbo-method': :post, class: 'btn btn-primary stretched-link' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">

      <% if current_user.admin? %>

        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Shortname</th>
            <th>Approvals</th>
            <th>Areas</th>
            <th>Boards</th>
            <th>Severities</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.shortname %></td>
              <td>
                <% if project.approvals? %>✅
                <% end %></td>
              <td>
                <% if project.areas? %>✅
                <% end %></td>
              <td>
                <% if project.boards? %>✅
                <% end %></td>
              <td>
                <% if project.severities? %>✅
                <% end %></td>
              <td><%= link_to 'Make Active', select_project_path(project), 'data-turbo-method' => :post %></td>
              <td><%= link_to 'Show', project %></td>
              <td><%= link_to 'Edit', edit_project_path(project) %></td>
              <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Project', new_project_path %>

      <% end %>
    </div>
  </div>
</div>

