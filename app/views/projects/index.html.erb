<h3>Projects</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Shortname</th>
    <th>Approvals</th>
    <th>Areas</th>
    <th>Boards</th>
    <th>Severities</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.shortname %></td>
      <td><% if project.approvals? %>✅<% end %></td>
      <td><% if project.areas? %>✅<% end %></td>
      <td><% if project.boards? %>✅<% end %></td>
      <td><% if project.severities? %>✅<% end %></td>
      <td><%= link_to 'Make Active', select_project_path(project), 'data-turbo-method' => :post %></td>
      <td><%= link_to 'Show', project %></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>