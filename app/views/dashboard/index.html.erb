<h3>Dashboard</h3>

<div class="row">
<% if project_role?(current_project, :user) %>
  <div class="col-lg-4 col-6">
    <div class="m-2">
      <table class="table table-condensed table-striped">
        <thead>
        <tr>
          <th>Kundenprojekt</th>
          <th>Anzahl Tickets</th>
        </tr>
        </thead>
        <tbody>
        <% for cp in current_project.customer_projects.accessible_by(current_ability) %>
          <tr>
            <td><%= link_to cp.name, customer_project_path(cp) %></td>
            <td><%= cp.tickets.count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <div class="col-lg-4 col-6">
    <div class="p-2 m-2" style="">
      <h5>Boards</h5>
      <div class="row">
        <% for t in current_project.board_tags %>
          <div class="col-md-6">
            <div class="card">
              <img src="https://picsum.photos/id/<%= t.id%64+1 %>/200/100" class="card-img-top">

              <div class="card-body">
                <h5 class="card-title"><%= link_to t.name, board_path(t) %></h5>
                <%= link_to "Show board", board_path(t), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
  <div class="col-lg-4 col-6">
    <div class="m-2">
      <h3><%= t('.my_tickets') %></h3>
      <table class="table table-condensed table-striped">
        <thead>
        <tr>
          <th>Ticket</th>
          <th>Status</th>
        </tr>
        </thead>
        <tbody>
        <% for ticket in current_project.tickets.where(creator: current_user) %>
          <tr>
            <td><%= link_to ticket.identifier, ticket %></td>
            <td><%= status_label(ticket) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

