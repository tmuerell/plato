<h3>Dashboard</h3>

<div class="row">
  <div class="col">
    <div class="p-2 m-2" style="background-color: #eee; color: #666; border: 1px solid #666; border-radius: 5px; height: 7rem;">
      Some Graph
    </div>
  </div>
  <div class="col">
    <div class="p-2 m-2" style="background-color: #eee; color: #666; border: 1px solid #666; border-radius: 5px; height: 3rem;">
      Some another graph
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="m-2">
      <table class="table table-condensed table-striped">
        <thead>
        <tr>
          <th>Kundenprojekt</th>
          <th>Anzahl Tickets</th>
        </tr>
        </thead>
        <tbody>
        <% for cp in current_project.customer_projects.accessible_by(current_ability) %>
          <tr>
            <td><%= link_to cp.name, customer_project_path(cp) %></td>
            <td><%= cp.tickets.count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col">
    <div class="p-2 m-2" style="">
      <h5>Boards</h5>
      <div class="row">
        <% for t in current_project.board_tags %>
          <div class="col-md-6">
            <div class="card">
              <img src="https://picsum.photos/id/<%= t.id%64+1 %>/200/100" class="card-img-top">

              <div class="card-body">
                <h5 class="card-title"><%= link_to t.name, board_path(t) %></h5>
                <%= link_to "Show board", board_path(t), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

