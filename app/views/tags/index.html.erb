<h3>Tags</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th><%= t('project') %></th>
    <th><%= t('tag_group') %></th>
    <th>Color</th>
  </tr>
  </thead>

  <tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= link_to tag.name, tag %></td>
      <td><%= tag.project.name %></td>
      <td><%= tag.tag_group.name if tag.tag_group.present? %></td>
      <td><%= tag.color %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if can?(:create, Tag) %>
  <%= link_to 'New Tag', new_tag_path, class: 'btn btn-light' %>
<% end %>